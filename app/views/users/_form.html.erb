<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="row">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="field col-xs-12">
        <%= f.label :gender %>
        <%= f.select(:gender, options_for_select([["Mr", "Mr"],["Mrs", "Mrs"],["Miss", "Miss"]])) %>
      </div>
      <div class="field col-sm-6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="field col-sm-6">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
  </div>
  <div class="row">
      <div class="field col-xs-6">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="field col-xs-6">
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>
  </div>
  <div class="field row">
     <div class="field col-xs-12">
        <%= f.label :biography %><br />
        <%= f.text_area :biography %>
     </div>
  </div>
  <div class="row">
      <div class="field col-sm-6">
        <%= f.label :dob %>
        <%= f.date_select :dob, :end_year => 1915, :start_year => 2015 %>
      </div>
      <div class="field col-sm-6">
        <%= f.label :nationality %>
        <%= f.text_field :nationality %>
      </div>
  </div>
  <div class="row">
      <div class="field col-sm-6">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="field col-sm-6">
          <%= f.label :password_confirmation, 'Confirmation' %>
          <%= f.password_field :password_confirmation %>
      </div>
  </div>
  <div class="row actions center">
    <%= f.submit %>
  </div>
<% end %>
