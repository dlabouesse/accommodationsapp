<h1>Listing users</h1>

<table>
  <tr>
    <th>Gender</th>
    <th>First name</th>
    <th>Last name</th>
    <!--<th>Email</th>
    <th>Phone</th>-->
    <!--<th>Biography</th>-->
    <th>Dob</th>
    <th>Nationality</th>
    <th>Living in</th>
    <!--<th>Password digest</th>-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
      <td><%= user.gender %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <!--<td><%= user.email %></td>
    <td><%= user.phone %></td>-->
    <!--<td><%= user.biography %></td>-->
    <td><%= user.dob %></td>
    <td><%= user.nationality %></td>
    <% if user.property_id == nil %>
        <td>No property</td>
    <% else %>
        <td><%= link_to user.property.address, user.property %></td>
    <% end %>
    <!--<td><%= user.password_digest %></td>-->
    <td><%= link_to 'Show', user %></td>
    
    <% if signed_in? && @current_user.admin == true %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= button_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>

  </tr>
<% end %>
</table>

