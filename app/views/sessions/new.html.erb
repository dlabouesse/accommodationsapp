<div class="row">
    <h1 class="col-xs-12">Sign in</h1>
</div>


<div class="row">
    <div class="col-md-6">
        <%= form_tag sessions_path do %>
        <div class="field row signin">
            <div class="col-xs-12">
                <%= label_tag :email %>
                <%= text_field_tag :email %>
            </div>
        </div>
        <div class="field row signin">
            <div class="col-xs-12">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
            </div>
        </div>
        <div class="row submit">
            <div class="col-xs-12">
                <%= submit_tag "Sign in" %>
            </div>
        </div>
        <% end %>
    </div>
    <div class="col-md-6">
        <p>Not registered yet? <%= link_to 'Create an account!', new_user_path %></p>
    </div>
</div>
