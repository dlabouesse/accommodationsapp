<h1>Listing images</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Advert</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image_tag(image.name, :width => "200") %></td>
    <td><%= link_to image.advert.property_address, image.advert %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

