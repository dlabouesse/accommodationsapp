<div class="row">
    <h1 class="col-xs-12">Listing adverts</h1>
</div>

<div class="row">
    <% @adverts.each do |advert| %>
        <div class="col-sm-6 col-md-4">

                <% if advert.images.empty? %>
                    <div style="background: url(/assets/no-photo.png) no-repeat center;  background-size: 45%;" class="advert">
                <% else %>
                    <div style="background: url(<%= advert.images[0].name %>) no-repeat center;  background-size: cover;" class="advert">
                <% end %>
                        <div class="banner_top">
                            <% if advert.property_id == nil %>
                                <p>Error! An advert must have a property !</p>
                            <% else %>
                                <p><%= link_to advert.property.address, advert %></p>
                            <% end %>
                        </div>
                        <div class="banner_bottom">
                            <div class="price">
                                <p><%= pluralize(advert.nb_of_free_beds, 'bed') %> - <strong><%= advert.rent %> â‚¬</strong></p>
                            </div>
                            <div class="author">
                                <% if advert.user_id == nil %>
                                    <p>Error! An advert must have an user !</p>
                                <% else %>
                                    <p><%= link_to advert.user.complete_name, advert.user %></p>
                                <% end %>
                            </div>
                        </div>
                    </div>
        </div>
    <% end %>
</div>
